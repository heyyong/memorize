{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2019",
      "es2020",
    ],
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}